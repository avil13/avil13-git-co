{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "importHelpers": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "outDir": "dist",
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es2015.symbol",
      "es2017.object"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "**/__mocks__/**/*",
    ".create/templates/**/*",
    "node_modules",
    "dist"
  ]
}
